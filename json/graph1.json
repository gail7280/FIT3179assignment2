{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/gail7280/FIT3179assignment2/main/data/country_count.csv"
  },
  "hconcat": [
    {
      "width": 500,
      "height": 400,
      "title": "World Map of Olympic Medal Counts",
      "projection": {"type": "equalEarth", "rotate":[-150,0,0]},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/gail7280/FIT3179assignment2/main/json/oceans.topojson",
            "format": {
              "type": "topojson", "feature": "oceans"
            }
          },
            "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/gail7280/FIT3179assignment2/main/json/ne_110m_graticules_30.topojson",
            "format": {
              "type": "topojson", "feature": "ne_110m_graticules_30"
            }
          },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/gail7280/FIT3179assignment2/main/json/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson", "feature": "ne_110m_admin_0_countries"
            }
          },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/gail7280/FIT3179assignment2/main/json/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {
            "type": "geoshape",
            "stroke": "white"
          },
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/gail7280/FIT3179assignment2/main/data/country_count.csv"
                },
                "key": "Country",
                "fields": ["count"]
              }
            }
          ],
          "encoding": {
            "color": {
              "field": "count",
              "type": "quantitative",
              "title": "Count",
              "scale": {
                "range": ["gold","brown"]
              }
            },
            "tooltip": [
              {
                "field": "properties.NAME", 
                "type": "nominal", 
                "title": "Country"},
              {
                "field": "count", 
                "type": "quantitative",
                "title": "Total Medals"}
            ]
          }
        }
      ]
    }
  ]
}
