{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 450,
    "height": 400,
    "title": "Olympic Game Ranking",
    "data": {
        "url": "https://raw.githubusercontent.com/gail7280/FIT3179assignment2/main/data/p5_rank.csv"
    },
    "params": [
        {
            "name": "country_select",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "China",
                    "France",
                    "Russia",
                    "United Kingdom",
                    "United States"
                ],
                "labels": [
                    "Show All",
                    "China",
                    "France",
                    "Russia",
                    "United Kingdom",
                    "United States"
                ],
                "name": "Country Selection: "
            }
        }
    ],
    "mark": {
        "type": "line",
        "point": true,
        "orient": "vertical"
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "ordinal",
            "axis": {
                "labelAngle": 0
            }
        },
        "y": {
            "field": "rank",
            "type": "quantitative",
            "title": "Olympic Rank",
            "scale": {
                "domain": [
                    "20",
                    "0"
                ]
            }
        },
        "color": {
            "field": "Country",
            "type": "nominal",
            "scale":{
                "range": ["#FFB000", "#FE6100", "#DC267F", "#785EF0", "#648FFF"]
            }
        },
        "tooltip": [
            {
                "field": "Year",
                "type": "ordinal"
            },
            {
                "field": "Country",
                "type": "nominal"
            },
            {
                "field": "rank",
                "type": "quantitative",
                "title": "Olympic Rank"
            }
        ]
    },
    "transform": [
        {
            "sort": [
                {
                    "field": "rank",
                    "order": "descending"
                }
            ]
        },
        {
            "filter": "country_select == null || datum.Country == country_select"
        }
    ]
}