{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "height": 400,
    "title": "Medal Summary",
    "data": {"url": "https://raw.githubusercontent.com/gail7280/FIT3179assignment2/main/data/ath_medal_count.csv"},
    "selection": {
        "country_highlight": {
            "type": "multi",
            "fields": ["Country"],
            "bind": "legend"
        }
    },
    "mark": {
      "type": "line",
      "point": true
    },
    "encoding": {
      "x": {
          "timeUnit": "year", 
          "field": "Year", 
          "title": "Athletes Count"
          },
      "y": {
          "field": "medal", 
          "type": "quantitative", 
          "title": "Medal Count"
          },
      "color": {
          "field": "Country", 
          "type": "nominal", 
          "scale":{
              "range": ["#648FFF", "#785EF0", "#DC267F", "#FE6100", "#FFB000"]
              }
          },
      "opacity": {
        "condition": {"selection": "country_highlight", "value": 1},
        "value": 0.3
          },
      "tooltip": [
              {"field": "Country", "type": "nominal"},
              {"field": "ath_num", "type": "quantitative", "title": "Athlete Count"},
              {"field": "medal", "type": "quantitative", "title": "Medal Count"}
          ]
    },
    "transform": [
          {
              "filter": "datum['Country'] == 'China' || datum['Country'] == 'France' || datum['Country'] == 'Russia' || datum['Country'] == 'United Kingdom' || datum['Country'] == 'United States'"
          }
    ]
  }
  